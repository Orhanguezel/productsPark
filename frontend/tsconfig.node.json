{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "skipLibCheck": true,

    "strict": true,

    "types": ["node"],
    "ignoreDeprecations": "6.0"
  },
  "include": ["vite.config.ts", "eslint.config.js"]
}
