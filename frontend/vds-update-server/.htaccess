# Güvenlik - SQL dosyalarına erişimi engelle
<Files "migrations.sql">
    Require all denied
</Files>

# CORS - JSON dosyalarına erişim izni
<FilesMatch "\.(json|md)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, OPTIONS"
    Header set Access-Control-Allow-Headers "authorization, x-client-info, apikey, content-type"
    Header set Content-Type "application/json"
</FilesMatch>

# OPTIONS request'leri için
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Directory listing'i kapat
Options -Indexes

# Sadece JSON ve MD dosyalarına izin ver
<FilesMatch "^(?!.*\.(json|md)$).*$">
    Require all denied
</FilesMatch>